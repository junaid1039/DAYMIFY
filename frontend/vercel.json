{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"  // For React; if Next.js, remove this line
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/$1" }
    ]
  }
  